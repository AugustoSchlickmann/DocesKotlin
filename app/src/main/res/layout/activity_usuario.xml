<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUsuario"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textViewUsuarioNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textColor="@color/roxinho"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextUsuarioNome"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsuarioNome"
        app:layout_constraintStart_toStartOf="@+id/editTextUsuarioNome"
        app:layout_constraintTop_toBottomOf="@+id/cardViewUsuario" />

    <EditText
        android:id="@+id/editTextUsuarioNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_empty"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:maxLength="40"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewEmailUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsuarioNome" />

    <TextView
        android:id="@+id/textViewEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="@color/roxinho"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextUsuarioEmail"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsuarioEmail"
        app:layout_constraintStart_toStartOf="@+id/editTextUsuarioEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioNome" />

    <EditText
        android:id="@+id/editTextUsuarioEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_empty"
        android:drawableStart="@drawable/ic_baseline_alternate_email_24"
        android:focusable="false"
        android:inputType="textPersonName"
        android:maxLength="40"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/progressBarUsuario"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsuarioNome"
        app:layout_constraintStart_toStartOf="@+id/editTextUsuarioNome"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailUsuario" />

    <Button
        android:id="@+id/botaoSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_rounded"
        android:backgroundTint="@color/rosinha"
        android:text="Sair"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:icon="@drawable/ic_baseline_logout_24"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botaoAtualizarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_rounded"
        android:backgroundTint="@color/rosinha"
        android:text="Atualizar"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:visibility="invisible"
        app:icon="@drawable/ic_baseline_check_24"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarUsuario"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botaoAtualizarUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioEmail" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/rosinha"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewUsuario"
        app:layout_constraintEnd_toEndOf="@+id/cardViewUsuario" />

</androidx.constraintlayout.widget.ConstraintLayout>