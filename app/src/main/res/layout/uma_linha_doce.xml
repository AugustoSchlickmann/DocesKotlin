<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UmaLinhaDoceConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/UmaLinhaDoceImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/UmLinhaSpinnerDoceImageViewContentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/olho_sogro" />

    <TextView
        android:id="@+id/UmaLinhaDoceTextViewNomeDoce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/rosinha"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/UmaLinhaDoceImageView"
        app:layout_constraintEnd_toStartOf="@+id/UmaLinhaDoceTextViewValorDoce"
        app:layout_constraintStart_toEndOf="@+id/UmaLinhaDoceImageView"
        app:layout_constraintTop_toTopOf="@+id/UmaLinhaDoceImageView"
        tools:text="Nome Doce Bem Grande Que Quebra Linha e atÃ© passa" />

    <TextView
        android:id="@+id/UmaLinhaDoceTextViewValorDoce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/roxinho"
        android:textSize="16sp"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toBottomOf="@+id/UmaLinhaDoceTextViewNomeDoce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/UmaLinhaDoceTextViewNomeDoce"
        tools:text="99.99" />

    <View
        android:id="@+id/UmaLinhaDoceDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UmaLinhaDoceImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>